<% layout("/layouts/boilerplate") %>

<div class="container mb-5 mt-5"><br>
  <h2 class="text-center mb-4">Login to VCEvents</h2><br>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <form
        class="registration-form bg-white p-4 border border-2 rounded-3 shadow-sm needs-validation"
        novalidate
      >
        <div class="mb-4">
          <label for="username" class="form-label">What's your name?</label>
          <input
            name="username"
            type="text"
            class="form-control form-control-lg border-2"
            placeholder="Full Name"
            required
          />         
          <div class="invalid-feedback">Enter your full name.</div>          
        </div>
  
        
        <div class="mb-4">
          <label for="password" class="form-label">Your password?</label>
          <input
            name="password"
            type="password"
            class="form-control form-control-lg border-2"
            placeholder="Password"
            required
          />
          <div class="invalid-feedback">Enter your Password.</div>
        </div>
        <button
            type="submit"
            class="btn btn-dark btn-lg w-100 text-uppercase fw-bold mb-3 mt-3"
          >
            Login
        </button>
        <p>New user? sign up <a href="http://localhost:3000/signup">here</a></p>
      </form>
    </div>
  </div>
</div>
