<% layout('layouts/boilerplate') %>
    
   

    <header class="hero-section">
      <div class="container text-center text-white">
        <h1>Welcome to VCEvents</h1>
        <p>Discover and Participate in Amazing Events</p>
      </div>
    </header>

    <section id="countdown" class="py-5 bg-light">
      <div class="container text-center">
        <h2>NEXT BIG EVENT IN</h2>
        <div class="countdown-timer">
          <div class="d-flex justify-content-center gap-4">
            <div class="time-block">
              <span id="days">00</span>
              <span>Days</span>
            </div>
            <div class="time-block">
              <span id="hours">00</span>
              <span>Hours</span>
            </div>
            <div class="time-block">
              <span id="minutes">00</span>
              <span>Minutes</span>
            </div>
            <div class="time-block">
              <span id="seconds">00</span>
              <span>Seconds</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="events" class="py-5">
      <input
        type="text"
        id="eventSearch"
        class="form-control"
        placeholder="Search for events..."
      />
      <select id="eventCategory" class="form-select">
        <option value="">All Categories</option>
        <option value="Technical">Technical</option>
        <option value="Cultural">Cultural</option>
        <option value="Sports">Sports</option>
      </select>

      <div class="container">
        <h2 class="text-center mb-4">Featured Events</h2>
        <div class="row g-4">
          <% events.forEach(event => { %>
          <div class="col-md-4">
            <div class="card event-card">
              <img
                src="<%= event.imageUrl %>"
                class="card-img-top"
                alt="<%= event.title %>"
              />
              <div class="card-body p-4">
                <h5 class="card-title mb-3"><%= event.title %></h5>
                <p class="card-text mb-4">
                  <%= event.description.substring(0, 100) %>...
                </p>
                <div class="event-details mb-3 px-2">
                  <span class="pe-3">
                    <i class="bi bi-calendar pe-2"></i> <%= event.date %>
                  </span>
                  <span>
                    <i class="bi bi-geo-alt pe-2"></i> <%= event.venue %>
                  </span>
                </div>
                <a
                  href="/events/<%= event._id %>"
                  class="btn btn-primary w-100 py-2 bg-dark"
                >
                  View Details
                </a>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <section id="categories" class="py-5 bg-light">
      <div class="container">
        <h2 class="text-center mb-4">Event Categories</h2>
        <div class="row g-4">
          <div class="col-md-3">
            <div class="category-card text-center p-4">
              <i class="bi bi-laptop fs-1"></i>
              <h4>Technical</h4>
            </div>
          </div>
          <div class="col-md-3">
            <div class="category-card text-center p-4">
              <i class="bi bi-music-note fs-1"></i>
              <h4>Cultural</h4>
            </div>
          </div>
          <div class="col-md-3">
            <div class="category-card text-center p-4">
              <i class="bi bi-trophy fs-1"></i>
              <h4>Sports</h4>
            </div>
          </div>
          <div class="col-md-3">
            <div class="category-card text-center p-4">
              <i class="bi bi-book fs-1"></i>
              <h4>Academic</h4>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div id="event-calendar"></div>

    <section id="gallery" class="py-5">
      <div class="container">
        <h2 class="text-center mb-4">Event Gallery</h2>
        <div class="row g-4">
          <div class="col-md-4">
            <img
              src="https://images.unsplash.com/photo-1511578314322-379afb476865"
              class="img-fluid gallery-img"
              alt="Event 1"
            />
          </div>
          <div class="col-md-4">
            <img
              src="https://images.unsplash.com/photo-1492684223066-81342ee5ff30"
              class="img-fluid gallery-img"
              alt="Event 2"
            />
          </div>
          <div class="col-md-4">
            <img
              src="https://images.unsplash.com/photo-1475721027785-f74eccf877e2"
              class="img-fluid gallery-img"
              alt="Event 3"
            />
          </div>
        </div>
      </div>
    </section>

    <section id="register" class="py-5 bg-light">
      <div class="container">
        <h2 class="text-center mb-4">Register for Events</h2>
        <form method="GET" action="/register" target="_blank">
          <button
            type="submit"
            class="btn btn-outline-dark register-btn offset-5"
          >
            Click here >>
          </button>
        </form>
      </div>
    </section>

    <!-- Success Modal -->
    <div
      class="modal fade"
      id="successModal"
      tabindex="-1"
      aria-labelledby="successModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="successModalLabel">
              Registration Successful
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body position-relative">
            <p>
              Thank you for registering! ðŸŽ‰ Looking forward to see you at the
              event
            </p>
            <div class="confetti-container" id="confettiContainer"></div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-primary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <section id="admin" class="py-5">
      <div class="container">
        <h2 class="text-center mb-4">Admin Dashboard</h2>
        <div class="row">
          <div class="col-md-3">
            <div class="card text-center mb-4">
              <div class="card-body">
                <h3>1,024</h3>
                <p>Total Registrations</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center mb-4">
              <div class="card-body">
                <h3>15</h3>
                <p>Active Events</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center mb-4">
              <div class="card-body">
                <h3>4.5</h3>
                <p>Average Rating</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center mb-4">
              <div class="card-body">
                <h3>76%</h3>
                <p>Success Rate</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


    <div class="modal fade" id="eventModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Event Details</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body">
            <img
              src="https://images.unsplash.com/photo-1540575467063-178a50c2df87"
              class="img-fluid mb-3"
              alt="Event"
            />
            <h4>Tech Conference 2024</h4>
            <p>
              Join industry leaders and innovators for an immersive experience
              in the world of technology at Vardhaman.
            </p>
            <ul class="list-unstyled">
              <li><strong>Date:</strong> December 15, 2024</li>
              <li><strong>Time:</strong> 9:00 AM - 5:00 PM</li>
              <li><strong>Venue:</strong> Main Auditorium</li>
              <li><strong>Price:</strong> 399/-</li>
            </ul>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button
              type="button"
              class="btn btn-primary"
              data-bs-target="#register"
            >
              Register Now
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/JS/script.js"></script>

