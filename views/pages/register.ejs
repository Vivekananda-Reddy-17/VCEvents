<% layout("/layouts/boilerplate") %>

<section id="register" class="py-5 bg-light">
  <div class="container mb-5 mt-5">
    <h2 class="text-center mb-4">Register for Events</h2>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <form
          class="registration-form bg-white p-4 border border-2 rounded-3 shadow-sm needs-validation"
          novalidate 
        >
          <div class="mb-4">
            <label for="name" class="form-label">Name</label>
            <input
              name="user[name]"
              type="text"
              class="form-control form-control-lg border-2"
              placeholder="Full Name"
              required
            />
            <div class="invalid-feedback">Enter your full name.</div>
          </div>
          <div class="mb-4">
            <label for="email" class="form-label">Email</label>
            <input
              name="user[email]"
              type="email"
              class="form-control form-control-lg border-2"
              placeholder="Email Address"
              required
            />
            <div class="invalid-feedback">Enter your email.</div>
          </div>
        
          <div class="mb-4">
            <label for="mobile" class="form-label">Mobile no.</label>
            <input
              name="user[mobile]"
              type="tel"
              class="form-control form-control-lg border-2"
              placeholder="Phone Number"
              required
            />
            <div class="invalid-feedback">Enter your Mobile no.</div>
          </div>
          <div class="mb-4">
          <label for="event" class="form-label">Participating Event</label>
            <select
              name="user[event]"
              id="eventSelect"
              class="form-select form-select-lg border-2"
              required
            >
              <option value="">Select Event</option>
              <option value="1">Tech Conference</option>
              <option value="2">Cultural Fest</option>
              <option value="3">Sports Meet</option>
            </select>
            <div class="invalid-feedback">Select an event.</div>
          </div>
          <button
            type="submit"
            class="btn btn-dark btn-lg w-100 text-uppercase fw-bold"
          >
            Register Now
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<!-- Success Modal -->
<div
  class="modal fade"
  id="successModal"
  tabindex="-1"
  aria-labelledby="successModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="successModalLabel">
          Registration Successful
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body position-relative">
        <p>
          Thank you for registering! ðŸŽ‰ Looking forward to see you at the event
        </p>
        <div class="confetti-container" id="confettiContainer"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script src="/JS/register.js"></script>
